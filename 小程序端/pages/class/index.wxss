.classxi {
    margin: 0 10px;
}

.class_box {
    position: relative;
    top: 15px;
    padding: 15px;
    background: #ffffff;
    margin-bottom: 15px;
}

.class_box .header {
    border-bottom: 1px solid #d9d9d9;
    padding-bottom: 10px;
    margin-bottom: 10px;
}

.class_box .header image {
    width: 25px;
    height: 25px;
}

.class_box .header .title {
    position: relative;
    top: -4px;
    left: 5px;
    font-size: 20px;
    font-weight: 350;
    color: #000000;
}

.class_box .content text {
    font-weight: 300;
}

.class_box .content .item {
    margin: 15px 0;
}

.class_box .content .item:last-child {
    margin-bottom: 0;
}

.class_box .content .item .left {
    display: inline-block;
    width: 30%;
    text-align: left;
}

.class_box .content .item .right {
    display: inline-block;
    width: 70%;
    text-align: right;
}

