page {
    background: #ffffff;
}

.header {
    display: inline-flex;
    width: 100%;
    justify-content: left;
    align-items: center;
    height: 350rpx;
    padding-left: 30px;
    background: linear-gradient(135deg, #DE4313 10%, #FEC163 100%);
}

.header text {
    color: #fff;
    margin: 5px 0;
    font-size: 18px;
}

.form {
    margin: 10px 15px;
    margin-top: 65px;
}

.form input {
    padding-left: 25px;
    background: #f5f6f8;
    height: 55px;
    border-radius: 35px;
    margin-bottom: 15px;
}

.form .login {
    margin-top: 30px;
    height: 55px;
    line-height: 55px;
    text-align: center;
    color: #ffffff;
    background: #f46c22;
    border-radius: 35px;
    font-size: 17px;
}

.form .identity {
    display: flex;
    width: 100%;
    justify-content: space-between;
    text-align: center;
}

.form .identity>view {
    width: 48%;
    padding: 15px 0;
    border-radius: 35px;
    background: #f5f6f8;
    color: #888686;
}

.form .identity>view.active {
    border: 1px solid #f46c22;
    background: rgb(244, 108, 34, .3);
    color: #f46c22;
}