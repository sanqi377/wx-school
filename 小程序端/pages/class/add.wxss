.logo {
    border-top: 1px solid #ccc;
    padding: 50px 0;
}

.logo text {
    position: relative;
    left: 20px;
    font-size: 30px;
}

.logo text::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -10px;
    display: inline-block;
    width: 150px;
    height: 2px;
    border-radius: 1px;
    background-color: #5296fc;
}

.form {
    margin: 5px 15px;
}

.form input {
    font-weight: 400;
    height: 40px;
    color: #a6a6a6;
    padding-left: 10px;
    margin-bottom: 10px;
    padding-bottom: 10px;
    border-bottom: 1px solid #d9d9d9;
}

.form .login {
    margin-top: 30px;
    margin-bottom: 20px;
}