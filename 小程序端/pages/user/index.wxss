.header {
    background: #ffffff;
    padding-bottom: 20px;
}

.header .userinfo {
    padding: 10px 20px;
}

.header .userinfo image {
    width: 45px;
    height: 45px;
    border-radius: 50%;
}

.header .userinfo text {
    width: 400px;
    position: relative;
    left: 13px;
    bottom: 14px;
}

.header .userinfo .sign {
    position: absolute;
    top: 24px;
    right: 30px;
    display: inline-block;
    font-size: 12px;
    background: #f46c22;
    box-shadow: 0 2px 5px rgb(244, 108, 34,.5);
    padding: 2px 10px;
    border-radius: 15px;
    color: #ffffff;
}

.header .sign_box {
    margin: 0 15px;
    padding: 20px 25px;
    height: 130px;
    background-image: linear-gradient(135deg, #DE4313 10%, #FEC163 100%);
    box-shadow: 0 5px 10px rgb(222, 67, 19,.5);
    border-radius: 20px;
    margin-top: 20px;
}

.header .sign_box>view {
    display: inline-block;
    width: 50%;
    text-align: center;
}

.header .sign_box>view>text {
    color: #ffffff;
}

.header .sign_box>view .big {
    display: block;
    font-size: 45px;
    color: #ffffff;
    line-height: 2;
}

.header .sign_box>view .big text {
    font-size: 16px;
    margin-left: 3px;
}

.header .sign_box>view .small {
    font-size: 14px;
}

.header .sign_box>view image {
    width: 16px;
    height: 16px;
    position: relative;
    top: 3px;
}

.menu_box {
    padding: 5px 15px;
    margin-top: 15px;
    background: #ffffff;
}

.menu_box .menu_list .item {
    padding: 10px 0;
}

.menu_box .menu_list .item image {
    width: 20px;
    height: 20px;
    position: relative;
    top: 4px;
}

.menu_box .menu_list .item text {
    color: #000;
    font-weight: 330;
    margin-left: 10px;
}