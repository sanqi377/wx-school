.container .tabs {
    display: inline-flex;
    background: #ffffff;
    width: 100%;
    height: 100%;
    text-align: center;
    margin-bottom: 15px;
}

.container .tabs .item {
    flex: 1;
    width: 100%;
    font-weight: 300;
}

.container .tabs .item .nav {
    display: inline-block;
    padding: 8px 5px;
    font-size: 14px;
}

.container .tabs .item .nav.active {
    color: #5296fc;
    border-bottom: 3px solid #5296fc;
}

.container .content .item {
    padding: 10px;
    font-weight: 300;
    margin: 0 15px;
    margin-bottom: 15px;
    font-size: 14px;
    background: #fff;
}

.container .content .item .name {
    display: inline-flex;
    width: 100%;
    padding-bottom: 6px;
    border-bottom: 1px solid #d9d9d9;
}

.container .content .item .name>view {
    flex: 1;
}

.container .content .item .name>view>button {
    float: right;
    height: 20px;
    line-height: 20px;
    font-size: 13px;
    font-weight: 300;
    background: red;
    color: #fff;
}

.container .content .item .list {
    padding-top: 6px;
    display: inline-flex;
    width: 100%;
}

.container .content .item .list>view {
    flex: 1;
}

.container .content .item .list>view.right {
    text-align: right;
}